<div class="container__for_game_new">
  <h1 class="text-center p-3 mb-4">Choose your character!</h1>
  <%= form_for (@game) do |f| %>
    <div class="parent__for_game options gameboard">
      <input type="hidden" name="game[id]" value="" />
      <% @characters.each do |character| %>
        <div class="">

          <div class="position-relative-for-cards">
            <div class="box-bounce bounce">
              <label for="game_id_<%= character.id %>">
                <input type="radio" value="<%= character.id %>" name="game[id]" id="game_id_<%= character.id %>" />
                <div class="position-relative-for-card-checkboxes">
                  <%= image_tag(character.image_url, class: "card-rounded") %>
                  <div class="card-checkbox d-none">
                    <i class="fa-solid fa-check"></i>
                  </div>
                </div>
              </label>
            </div>
            <div class="slot-white"></div>
          </div>

        </div>
      <% end %>
    </div>
    <div class="my-5">
      <input type="submit" class='btn-arcade-green' name="commit" value="Let's play?" data-disable-with="Good choice!" />
    </div>
  <% end %>
</div>
