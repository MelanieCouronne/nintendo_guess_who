<div class="container">
  <div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4 offset-sm-2 offset-md-3 offset-lg-4">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <div>
            <i class="fa-solid fa-caret-right"></i>
            <p>To run the test, copy the information below in the form</p>
          </div>
          <div class="red-notice">
            <p>melanie@gmail.com</p>
            <i class="fa-regular fa-clone"></i>
          </div>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <p>test-azerty</p>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn-red" %>
        </div>
      <% end %>
      <div class="m-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
