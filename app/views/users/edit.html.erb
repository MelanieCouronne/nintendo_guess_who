<div class="container">
  <div class="row mt-5">
    <div class="col-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3">
      <%= simple_form_for @user, url: user_registration_path do |f| %>
        <div class="mb-2" data-controller="display-email-in-profile">

          <div class="d-flex align-items-center">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag(current_user.photo.key, class: "avatar-profile-page") %>
            <% else %>
              <%= image_tag 'user-avatar.png', class: "avatar-profile-page" %>
            <% end %>
            <div class="ms-5">
              <h2 class="mb-4" id='email-user' data-display-email-in-profile-target="spanEmail"><%= @user.email  %></h2>
              <div class="d-flex">
                <%= f.input :photo, as: :file, label: false, class:"btn btn-outline-dark" %>
              </div>
            </div>
          </div>

          <div class="mt-5">
            <h4 class="text-left">My informations</h4>
            <div class="">
              <%= f.input :email, label: "Email", placeholder: 'Your email', value: @user.email, input_html: { "data-display-email-in-profile-target":"inputEmail", "data-action":"keyup->display-email-in-profile#displayEmail"} %>
            </div>
          </div>

          <div class="mt-5">
            <h4 class="text-left">Password</h4>
              <div class="form-group">
                  <%= f.input :current_password, label: "Current password", placeholder: '••••••', value: @user.password %>
              </div>
              <div class="form-group">
                  <%= f.input :password, label: "New password", placeholder: '••••••', value: @user.password %>
              </div>
              <div class="form-group">
                  <%= f.input :password_confirmation, label: "Confirmation", placeholder: '••••••', value: @user.password %>
              </div>
              <div class="text-right mr-2">
                <%= f.button :submit, 'Submit',class: "mt-3 btn btn-outline-dark detail", id: "btn-profile" %>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
